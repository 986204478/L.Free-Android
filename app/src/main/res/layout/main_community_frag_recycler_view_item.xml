<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewModel"
            type="com.lfork.a98620.lfree.main.community.CommunityFragmentItemViewModel"/>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="10dp">
            <ImageView
                android:id="@+id/item_img"
                app:setImageWithDiskCache="@{viewModel.headImgUri}"
                android:layout_margin="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/item_name"
                android:text="@{viewModel.headName}"
                android:textSize="24sp"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="40dp" />
            <TextView
                android:text="@{viewModel.articleTime.substring(5, 16)}"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_article"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:text="@{viewModel.article}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ListView
            android:id="@+id/img_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

    </LinearLayout>
</layout>
